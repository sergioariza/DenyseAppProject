<?xml version="1.0" encoding="utf-8"?>
<s:TabbedViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
								  frameRate="60"
								  splashScreenMinimumDisplayTime="3000"
								  splashScreenScaleMode="stretch"
								  applicationDPI="240"
								  splashScreenImage="@Embed('assets/splash/splash_screen.png')"
								  xmlns:s="library://ns.adobe.com/flex/spark">
	<fx:Declarations>
		<!-- Declarations -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import model.LocalizationModel;
		]]>
	</fx:Script>

	<fx:Style source="/style/mainMenu.css"/>

	<!--<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		s|TabbedViewNavigator #tabBar {
			skinClass: ClassReference("skins.ScrollingTabBarSkin");
		}
		s|TabbedViewNavigator #tabBar s|Scroller {
			skinClass: ClassReference("skins.NoScrollBarScrollerSkin");
		}
	</fx:Style>-->

	<s:navigators>
		<s:ViewNavigator label="{LocalizationModel.newsLabel}"
						 id="idNewsView"
						 width="100%"
						 height="100%"
						 firstView="views.NewsView">
			<s:icon>
				<s:MultiDPIBitmapSource source240dpi="@Embed('assets/icons/tabs/news.png')"/>
			</s:icon>
		</s:ViewNavigator>
		<s:ViewNavigator label="{LocalizationModel.showsLabel}"
						 id="idShowsView"
						 width="100%"
						 height="100%"
						 firstView="views.ShowsView">
			<s:icon>
				<s:MultiDPIBitmapSource source240dpi="@Embed('assets/icons/tabs/shows.png')"/>
			</s:icon>
		</s:ViewNavigator>
		<s:ViewNavigator label="{LocalizationModel.videosLabel}"
						 id="idVideosView"
						 width="100%"
						 height="100%"
						 firstView="views.VideosView">
			<s:icon>
				<s:MultiDPIBitmapSource source240dpi="@Embed('assets/icons/tabs/videos.png')"/>
			</s:icon>
		</s:ViewNavigator>
		<s:ViewNavigator label="{LocalizationModel.bioLabel}"
						 id="idBioView"
						 width="100%"
						 height="100%"
						 firstView="views.BioView">
			<s:icon>
				<s:MultiDPIBitmapSource source240dpi="@Embed('assets/icons/tabs/bio.png')"/>
			</s:icon>
		</s:ViewNavigator>
		<s:ViewNavigator label="{LocalizationModel.configLabel}"
						 id="idAboutView"
						 width="100%"
						 height="100%"
						 firstView="views.ConfigView">
			<s:icon>
				<s:MultiDPIBitmapSource source240dpi="@Embed('assets/icons/tabs/config.png')"/>
			</s:icon>
		</s:ViewNavigator>
	</s:navigators>
</s:TabbedViewNavigatorApplication>
